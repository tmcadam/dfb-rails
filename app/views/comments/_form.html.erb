<%= simple_form_for @comment, url: url, method: method do |f| %>
  <%= f.association :biography %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :comment %>
  <%= f.input :approved %>
  <div class="form-actions">
      <%= link_to "Back", comments_path, class: "btn btn-outline-dark", role:"button" %>
      <%= link_to "Delete", comment_path(@comment),
                              class: "btn btn-danger ",
                              role:"button",
                              data: {:confirm => 'Are you sure?'},
                              method: :DELETE %>
      <%= f.button :submit, class: "btn btn-outline-dark" %>
  </div>
<% end %>
