<h3>
  <strong>Authors</strong>
  <% if user_signed_in? %>
      <%= link_to "New", new_author_path, class: "btn btn-default btn-xs", role:"button" %>
  <% end %>
</h3>
<div class="card-columns custom-columns">
    <% if @authors.each do |author| %>
        <div class="card">
            <div class="card-body">
                <%= tag.span(nil, class: "anchor", id: author.simple_slug) %>
                <h5 class="card-title">
                <%= author.name %>
                <% if user_signed_in? %>
                    <%= link_to "Edit", edit_author_path(author), class: "btn btn-default btn-xs", role:"button" %>
                    <%= link_to "Delete", author_path(author), class: "btn btn-default btn-xs", role:"button", data: {:confirm => 'Are you sure?'}, method: :DELETE %>
                <% end %>
                </h5>

                <% if author.biography %>
                    <%= tag.p( author.biography, class: "card-text" ) %>
                <% end %>
                <hr>
                <small><ul>
                <% author.biographys.each do |biography| %>
                    <li>
                        <%= link_to biography.title, biography_path(biography.slug), class: "card-link" %>
                        <% if not biography.has_single_author %>
                            <ul>
                                <li>with
                                    <%= tag.span biography.other_author(author).name,
                                        class: "card-link font-italic author-link",
                                        data:  { "hash": biography.other_author(author).simple_slug  } %>
                                </li>
                            </ul>
                        <% end %>
                    </li>
                <% end %>
                </ul></small>
            </div>
        </div>
    <% end.empty? %>
        <div class="item">
            No authors
        </div>
    <% end %>
</div>
