<h3>
  <strong><%= @static_content.title %></strong>
</h3>

<%= @static_content.body.html_safe %>

<!-- Render featured biographies -->
<% if @static_content.slug == "home" and Biography.where(featured: true).count >= 3  %>
    <hr>
    <p class="small"><strong>Featured biographies...</strong></p>
    <div class="row">
        <div class="col-xs-12 col-ms-6 col-sm-4"><div class="well">
          <%= render partial: 'biographies/featured', locals: {biography: Biography.where(featured: true)[0] } %>
        </div></div>
        <div class="col-xs-12 col-ms-6 col-sm-4"><div class="well">
          <%= render partial: 'biographies/featured', locals: {biography: Biography.where(featured: true)[1] } %>
        </div></div>
        <div class="col-xs-12 col-ms-6 col-ms-offset-3 col-sm-4 col-sm-offset-0"><div class="well">
          <%= render partial: 'biographies/featured', locals: {biography: Biography.where(featured: true)[2] } %>
        </div></div>
    </div>
<% end %>
