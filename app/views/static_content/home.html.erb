<section class="jumbotron d-flex justify-content-center align-items-center" style="height:500px;">
    <div class="container d-inline-block text-center shadow" style="width:auto;height:auto;">
        <h1 class="jumbotron-heading">The Dictionary of Falklands Biography</h1>
        <p class="jumbotron-sub-heading h3">including South Georgia</p>
    </div>
</section>

<div class="container">
    <p class="h5 text-center my-5">The Dictionary of Falklands Biography describes people concerned with the history of the Falkland Islands and South Georgia.</>
    
    <div class="my-5 col-xl-8 offset-xl-2">
        <%= form_tag biographies_path, :method => 'get' do %>
            <div class="input-group" class="width">
                <%= text_field_tag 'search', params[:search], placeholder: "Search biographies", class: "form-control form-control-lg" %>
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button"><i class="fa fa-search"></i></button>
                </div>
            </div>
        <% end %>
    </div>
    <hr>
</div>


<!-- Render featured biographies -->
<% if Biography.where(featured: true).count >= 6  %>
<div class="container px-5">
    <p class="h4 text-center"><strong>Featured Biographies</strong></p>
    <div class="card-deck p-5">
        <div class="card">
        <%= render partial: 'biographies/featured', locals: {biography: Biography.where(featured: true)[0] } %>
        </div>
        <div class="card">
        <%= render partial: 'biographies/featured', locals: {biography: Biography.where(featured: true)[1] } %>
        </div>
        <div class="card">
        <%= render partial: 'biographies/featured', locals: {biography: Biography.where(featured: true)[2] } %>
        </div>
    </div>

    <div class="card-deck pb-5 px-5">
        <div class="card">
            <%= render partial: 'biographies/featured', locals: {biography: Biography.where(featured: true)[3] } %>
        </div>
        <div class="card">
            <%= render partial: 'biographies/featured', locals: {biography: Biography.where(featured: true)[4] } %>
        </div>
        <div class="card">
            <%= render partial: 'biographies/featured', locals: {biography: Biography.where(featured: true)[5] } %>
        </div>
    </div>
</div>
<% end %>
