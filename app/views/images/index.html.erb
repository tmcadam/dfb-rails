<h4>
  <strong>Images</strong> <%= link_to "New", new_image_path, class: "btn btn-default btn-xs", role:"button" %>
</h4>
<table id="index" class="table">
    <% if @images.each do |image| %>
    <tr>
        <td>
            <%= link_to image.title, image_path(image) %>
        </td>
        <td>
            <%= image.biography.title %>
        </td>
        <td>
            <%= image_tag image.image.url(:thumb) %>
        </td>
        <td>
            <div class="btn-group">
            <%= link_to "Edit", edit_image_path(image), class: "btn btn-default btn-xs pull-right", role:"button" %>
            <%= link_to "Delete", image_path(image), class: "btn btn-default btn-xs pull-right", role:"button", data: {:confirm => 'Are you sure?'}, method: :DELETE %>
            </div>
        </td>
    </tr>
    <% end.empty? %>
    <tr>
        <td>No images</td>
    </tr>
  <% end %>
</table>
