<%= simple_form_for @biography, url: url, method: method do |f| %>
  <%= f.input :title %>
  <%= f.input :lifespan %>
  <%= f.input :body, as: :summernote %>
  <%= f.input :authors %>
  <%= f.input :south_georgia %>
  <%= f.association :primary_country %>
  <%= f.association :secondary_country %>
  <%= f.input :revisions %>
  <%= f.input :slug %>
  <%= f.input :featured %>
  <div class="form-inline">
  <%= f.simple_fields_for :biography_authors, class: 'form-inline' do |biography_author| %>
        <%= biography_author.association :author %>
        <%= biography_author.input :author_position %>
  <% end %>
  </div>

  <div class="form-actions">
      <%= link_to "Back", biographies_path, class: "btn btn-default", role:"button" %>
      <%= f.button :submit %>
  </div>
<% end %>
