
<table id="index" class="table">
    <% if @biographies.each do |biography| %>
    <tr>
        <td>
            <%= link_to biography.title, biography_path(biography.slug) %> <%= biography.lifespan %>
            <%= truncate(biography.body, :length => 200, :separator => ' ', :escape => false) %>
        </td>
    </tr>
    <% end.empty? %>
    <tr>
        <td>No results</td>
    </tr>
  <% end %>
</table>
