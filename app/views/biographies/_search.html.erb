<%= form_tag biographies_path, :method => 'get' do %>
    <div class="input-group">
        <%= text_field_tag 'search', params[:search], placeholder: "Search biographies", class: "form-control" %>
        <span class="input-group-btn">
           <button class="btn btn-default" type="submit">
             <span class="glyphicon glyphicon-search"></span>
           </button>
         </span>
    </div>
<% end %>
